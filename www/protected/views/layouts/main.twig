<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8">
    <base href="{{ App.baseUrl }}/">
    {% block head %}
        <link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/style.css">
        <link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/bootstrap-theme.css">
        <link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/bootstrap.css">
        <!--[if lt IE 8]>
        <link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/ie.css" media="screen, projection"/>
        <![endif]-->
        <title>{{ this.pageTitle|e }}</title>
    {% endblock %}

    <!-- blueprint CSS framework -->
    {#<link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/screen.css" media="screen, projection" />#}
    {#<link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/print.css" media="print" />#}
    {#<link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/main.css" />#}
    {#<link rel="stylesheet" type="text/css" href="{{ App.baseUrl }}/css/form.css" />#}
</head>
<body>
<div class="container" id="page">
    <div class="logo container np">
        {% block header %}{% endblock %}
        {% block header_menu_b %}
            {% if this.breadcrumbs %}
                {% do this.widget('zii.widgets.CBreadcrumbs', {
                'links': this.breadcrumbs,
                }) %}
            {% endif %}
        {% endblock %}
        {% block header_menu %}{% endblock %}
        {% block header_menu_a %}{% endblock %}
    </div>
    <div class="content container">
        {% block content_b %}{% endblock %}
        {% block content %}{% endblock content %}
        {% block content_a %}{% endblock %}
    </div>
    <div id="footer" class="footer container">
        {% block footer %}
            Copyright &copy; {{ now|date('Y') }} Shikon & X-iLeR.<br/>
            All Rights Reserved.<br/>
            {{ Yii.powered }}
        {% endblock %}
    </div>
</div>
{% block body_close %}{% endblock %}
</body>
</html>